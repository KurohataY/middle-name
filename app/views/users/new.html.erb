<div class="session_css">
  <%= form_for(@user) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
    <div class="form-group">
      <%= f.text_field :name,:placeholder => "ニックネームor名前", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.email_field :email,:placeholder => "メールアドレスを入力してね！", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.password_field :password,:placeholder => "パスワードを入力してね！", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation,:placeholder => "パスワード再確認！", class: 'form-control' %>
    </div>
    <%= f.submit '新規登録！', class: 'btn btn-primary btn-block' %>
  <% end %>
</div>